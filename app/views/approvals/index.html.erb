<h2>Admins não aprovados</h2>
<p>Solicitações: <%= @requested_admins.length %></p>
<table style="text-align: center">
  <tr>
    <th>Index</th>
    <th>Nome</th>
    <th>Email</th>
    <th>Situação</th>
    <th>Ação</th>
  </tr>
  <% @requested_admins.each_with_index do |admin, index| %>
    <div class="pending_admin-<%= index%> ">

    <tr>
      <td><%= index %></td>
      <td><%= admin.full_name %></td>
      <td><%= admin.email %></td>
      <% if admin.not_approved? %>
        <td>Aprovações 0/2</td>
      <% else %>
        <td>Aprovações 1/2</td>
      <% end %>
        <td><%= button_to 'Aprovar', approval_path(admin), { method: :patch }%></td>
    </tr>
  <% end %>
</table>



