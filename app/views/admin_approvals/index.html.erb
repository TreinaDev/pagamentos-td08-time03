<h2>Usuários Pendentes</h2>
<p>Solicitações: <%= @requested_admins.length %></p>
<% if @requested_admins.empty? %>
  <p>Nenhum pedido de aprovação encontrado.</p>
<% else %>
  <table class="table align-middle text-center">
    <thead class="table-light">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Aprovações</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      <% @requested_admins.each_with_index do |admin, index| %>
        <tr class="pending_admin-<%= index %>">
          <td><%= admin.full_name %></td>
          <td><%= admin.email %></td>
          <% if admin.not_approved? %>
            <td>0/2</td>
          <% else %>
            <td>1/2</td>
          <% end %>
          <td><%= button_to 'Aprovar', create_admin_approvals_path(admin), class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
