<h2>Nova Categoria de Clientes</h2>
<% if @client_category.errors.any? %>
  <div>
    <% @client_category.errors.full_messages.each do |message| %>
      <p class="alert alert-danger mb-2 fs-6 fw-bolder list-unstyled"><%= message %></p>
    <% end %>
  </div>
<% end %>

<div class="p-3">
  <%= form_with(model: @client_category) do |f| %>
    <div class="row">
      <div class="form-group col-lg-2 p-0 mb-2 form-floating">
        <%= f.text_field :name, step: 0.1, class: 'form-control', placeholder: '' %>
         <%= f.label :name, class: 'form-label' %>
      </div>
      <div class="form-group col-lg-2 p-0 mb-2 form-floating">
         <%= f.number_field :discount, step: 0.1, class: 'form-control', placeholder: '' %>
         <%= f.label :discount, class: 'form-label' %>
      </div>
    </div>
    <div class="row">
      <%= f.submit 'Criar', class: 'btn btn-danger col-lg-2 mb-2' %>
    </div>
  <% end %>
  <div class="row">
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger col-lg-4' %>
  </div>
</div>
