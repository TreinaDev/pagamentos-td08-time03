  <!DOCTYPE html>
<html>
  <head>
    <title>Pagamentos</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <header>
      <h1>Pagamentos</h1>
      <% if admin_signed_in? %>
        <nav>
          <%= link_to 'Início', root_path %>
          <%= link_to 'Aprovações Pendentes', approvals_path %>
          <p>Olá, <%= current_admin.email %></p>
          <%= button_to 'Sair', destroy_admin_session_path, method: :delete%>
          <%= link_to 'Cotação de Rubis', exchange_rates_path %>
        </nav>
      <% end %>
    </header>

    <main>
      <%= render 'shared/home/flash' %>
      <%= yield %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
