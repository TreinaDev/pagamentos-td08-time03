<div class="d-flex justify-content-between">
  <h2>Nova Conversão Bônus</h2>
  <div class="links gap-2">
  </div>
</div>
<hr>
<% if @bonus_conversion.errors.any? %>
  <div>
    <% @bonus_conversion.errors.full_messages.each do |message| %>
      <p class="alert alert-danger mb-2 fs-6 fw-bolder list-unstyled"><%= message %></p>
    <% end %>
  </div>
<% end %>
<div class="p-3">
  <%= form_with(model: @bonus_conversion) do |f| %>
    <div class="row">
      <div class="row col-5 gx-2 mb-2">
        <%= f.label :start_date %>
        <%= f.date_select :start_date, {start_day: Date.today, order: [:day, :month, :year]}, {class: 'form-select w-25 py-3 me-3'} %>
      </div>
    </div>
    <div class="row">
      <div class="row col-5 gx-2 mb-2">
        <%= f.label :end_date %>
        <%= f.date_select :end_date, {start_day: Date.yesterday, order: [:day, :month, :year]}, {class: 'form-select w-25 py-3 me-3'} %>
      </div>
    </div>
    <div class="row my-2">
      <div class="form-group col-lg-2 p-0 mb-2 form-floating">
        <%= f.number_field :bonus_percentage, step: 0.1, class: 'form-control', placeholder: '' %>
        <%= f.label :bonus_percentage, class: 'form-label ' %>
      </div>
      <div class="form-group col-lg-2 p-0 mb-2 form-floating">
        <%= f.number_field :deadline, class: 'form-control', placeholder: '' %>
        <%= f.label :deadline, class: 'form-label ' %>
      </div>
    </div>
    <div class="row mb-2 ">
      <div class="form-group col-lg-4 p-0 mb-2 form-floating">
        <%= f.collection_select :client_category_id, ClientCategory.where(status:10), :id, :name, {},{:class=>'form-select'} %>
        <%= f.label :client_category, class: 'form-label' %>
      </div>
    </div>
    <div class="row">
      <%= f.submit 'Criar', class: 'btn btn-danger col-lg-4 mb-2' %>
    </div>
  <% end %>
</div>
